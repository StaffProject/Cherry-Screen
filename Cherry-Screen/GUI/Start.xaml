<Window x:Class="Cherry_Screen.GUI.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Cherry_Screen.GUI"
        Title="Start" Height="1080" Width="1920">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="930"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="960"></ColumnDefinition>
            <ColumnDefinition Width="960"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <local:OptionsBar Grid.Row="1" Grid.Column="0"></local:OptionsBar>
        <local:ClockBar Grid.Row="1" Grid.Column="1"></local:ClockBar>


        <WebBrowser Name="news" HorizontalAlignment="Left" Height="410" Margin="35,45,0,0" VerticalAlignment="Top" Width="885"/>
        <WebBrowser Grid.Column="1" Name="plan" HorizontalAlignment="Left" Height="425" Margin="45,455,0,0" VerticalAlignment="Top" Width="870"/>
        
        <TabControl Grid.Column="1" HorizontalAlignment="Left" Height="410" Margin="45,10,0,0" VerticalAlignment="Top" Width="870">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>

</Window>
