<Window x:Class="Cherry_Screen.GUI.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Cherry_Screen.GUI"
        Title="Start" Height="1080" Width="1920">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="900"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="960"></ColumnDefinition>
            <ColumnDefinition Width="960"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Content="Button1" HorizontalAlignment="Left" Margin="112,92,0,0" VerticalAlignment="Top" Width="512" Height="317"  Style="{StaticResource MyButton}" />
        <Button Content="Button2" HorizontalAlignment="Left" Margin="112,471,0,0" VerticalAlignment="Top" Width="512" Height="317" Style="{StaticResource MyButton}" />

        <local:OptionsBar Grid.Row="1" Grid.Column="0"></local:OptionsBar>
        <local:ClockBar Grid.Row="1" Grid.Column="1"></local:ClockBar>
        
    </Grid>

</Window>
